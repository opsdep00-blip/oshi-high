// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Auth.js (NextAuth) 標準テーブル =====

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // ファン向け拡張フィールド
  phoneHash     String?   @unique  // SHA-256(phone + salt)
  phoneSalt     String?             // ユーザーごとのユニークなソルト
  supportingIdolId String?  // 現在支援中の推し (制約: 1つの電話番号 → 1つの推し)
  
  // ドット絵パレット (最大4色)
  selectedColors String[] @default([])

  // メタデータ
  role          Role      @default(FAN)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // リレーション
  accounts      Account[]
  sessions      Session[]
  transactions  SupportTransaction[]
  supportingIdol Idol?     @relation("CurrentSupporter", fields: [supportingIdolId], references: [id], onDelete: SetNull)

  @@index([phoneHash])
  @@index([supportingIdolId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String  // "oauth" or "credentials"
  provider           String  // "twitter", "x", "sms", etc.
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  // SNS認証用: プロフィール情報キャッシュ
  snsProfileId       String?  // X/Twitter の user_id
  snsHandle          String?  // X/Twitter の @handle
  snsVerifiedAt      DateTime?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  type       String   // "sms" or "email"
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
  @@index([identifier])
}

// ===== ドメインテーブル =====

model Idol {
  id            String   @id @default(cuid())
  name          String   @unique
  
  // SNS認証用: 推し本人のSNS ID
  snsLink       String?  @unique // X/Twitter の user_id (Official Claim用)
  snsHandle     String?  // @handle or URL
  snsVerifiedAt DateTime?

  // 状態管理
  claimedBy     String?  // User.id (Official Owner)
  claimedAt     DateTime?

  description   String?  @db.Text
  profileImage  String?  // pixel art JSON or URL
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // リレーション
  supporters    User[]   @relation("CurrentSupporter")
  transactions  SupportTransaction[]

  @@index([snsLink])
  @@index([claimedBy])
}

model Ad {
  id            String   @id @default(cuid())
  title         String
  description   String?  @db.Text
  sponsorName   String?
  
  // 支援金配分
  idolSharePercent Int    @default(70)  // 推しへの配分比率 (%)
  platformFeePercent Int  @default(30)  // プラットフォーム手数料 (%)
  
  status        String   @default("active") // "active", "paused", "archived"
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // リレーション
  yellMaterials YellMaterial[]

  @@index([status])
}

model YellMaterial {
  id            String   @id @default(cuid())
  adId          String
  
  // ドット絵データ
  pixelData     String   @db.Text // JSON: { palette: string[], frames: number[][][] }
  name          String   // 素材の名前 (例: "クマ耳ver", "ハート")
  width         Int      @default(32)
  height        Int      @default(32)
  
  // メタデータ
  displayOrder  Int      @default(0)
  isActive      Boolean  @default(true)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // リレーション
  ad            Ad       @relation(fields: [adId], references: [id], onDelete: Cascade)
  transactions  SupportTransaction[]

  @@index([adId])
  @@index([isActive])
}


model SupportTransaction {
  id            String   @id @default(cuid())
  userId        String
  idolId        String
  yellMaterialId String?  // 使用した YellMaterial
  
  // 金額・ポイント
  amount        Int      // 支援金額 (¥)
  activityPoints Int      // 付与されたActivity
  
  // フロー
  transactionType String  // "yell_material", "direct_support", etc.
  status        String   @default("completed") // "pending", "completed", "failed"
  
  // 追跡用（生の電話番号は保存しない！）
  phoneHash     String?  // 重複支援チェック用
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)
  idol Idol @relation(fields: [idolId], references: [id], onDelete: Restrict)
  yellMaterial YellMaterial? @relation(fields: [yellMaterialId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([idolId])
  @@index([yellMaterialId])
  @@index([phoneHash])
}

// ===== Enum =====

enum Role {
  FAN
  IDOL
  ADMIN
}
