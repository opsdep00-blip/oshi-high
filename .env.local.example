# ============================================================================
# OSHI-HIGH Environment Variables - Local Development
# Copy this file to .env.local and update with your values
# ============================================================================

# ============================================================================
# Database (Local Docker)
# ============================================================================
DATABASE_URL=postgresql://oshi_user:oshi_local_dev_password@localhost:5432/oshi_local
DB_HOST=localhost
DB_PORT=5432
DB_USER=oshi_user
DB_PASSWORD=oshi_local_dev_password
DB_NAME=oshi_local

# ============================================================================
# Redis (Local Docker)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# S3 / MinIO (Local Storage)
# ============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=oshi-high-assets
S3_REGION=us-east-1
S3_USE_PATH_STYLE=true

# ============================================================================
# Application
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_STORAGE_URL=http://localhost:9000

# ============================================================================
# Authentication
# ============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=dev-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3000
SESSION_SECRET=dev-session-secret-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# ============================================================================
# Google Cloud (for Staging/Production)
# ============================================================================
GCP_PROJECT_ID=oshi-high
# For local integration testing with staging:
# Download from GCP console and place as: infra/staging/sa-key.json
# GOOGLE_APPLICATION_CREDENTIALS=./infra/staging/sa-key.json

# ============================================================================
# Local Development Only
# ============================================================================

# SMS Configuration - Set to 'true' for local testing (mocks SMS sending)
ENABLE_SMS_MOCK="true"
# SMS provider in non-mock mode: "twilio" (default) or "firebase"
SMS_PROVIDER="twilio"

# Twilio (production/staging)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# Either a Messaging Service SID or From phone number is required
TWILIO_MESSAGING_SERVICE_SID="your-messaging-service-sid"
TWILIO_FROM_NUMBER="+81xxxxxxxxx"

# Twitter OAuth (optional for local dev)
# Get from https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# ============================================================================
# Production - DO NOT PUT SECRETS HERE
# These are managed by GCP Secret Manager and injected at runtime
# ============================================================================
# FIREBASE_PROJECT_ID=<injected from GCP Secret Manager>
# FIREBASE_CLIENT_EMAIL=<injected from GCP Secret Manager>
# FIREBASE_PRIVATE_KEY=<injected from GCP Secret Manager>
# GOOGLE_APPLICATION_CREDENTIALS=<set in Cloud Run environment>
